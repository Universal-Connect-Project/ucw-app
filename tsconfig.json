{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "allowJs": true,
    "strictNullChecks": false // TODO: change this to true and fix all errors
  },
  "include": [
    "__mocks__/**/*",
    "server/**/*",
    "test/**/*",
    "jest.config.js",
    "shared/connect/fireflyApiBridge/index.js",
  ],
  "exclude": ["dist", "node_modules", "./ui/dist", "./ui/node_modules", "cypress.config.ts",],
}
