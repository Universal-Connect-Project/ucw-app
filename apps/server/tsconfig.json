{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Server",
  "baseUrl": "src",
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "strictNullChecks": false, // TODO: change this to true and fix all errors
    "target": "esnext",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "jest.config.js"],
  "exclude": [
    "dist",
    "node_modules",
    "cypress.config.ts",
    "cypress.config.alternate.ts"
  ]
}
