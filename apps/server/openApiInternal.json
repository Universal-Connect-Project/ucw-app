{
  "info": {
    "description": "Endpoints that are not meant to be called externally, and are generally called by the connect widget UI",
    "title": "Internal widget service endpoints",
    "version": "0.1.0"
  },
  "openapi": "3.0.0",
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "servers": [
    {
      "description": "Widget Service",
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/instrumentation/userId/{userId}/jobType/{jobType}": {
      "post": {
        "description": "This endpoint is called by the connect widget frontend and returns response headers that are saved for future requests from the connect widget",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "jobType",
            "required": true,
            "schema": {
              "type": "string",
              "example": "aggregate"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "current_aggregator": {
                    "type": "string"
                  },
                  "current_member_guid": {
                    "type": "string"
                  },
                  "single_account_select": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "headers": {
              "meta": {
                "schema": {
                  "type": "object",
                  "example": {
                    "user_id": "testUserId",
                    "job_type": "aggregate",
                    "scheme": "vcs",
                    "oauth_referral_source": "BROWSER",
                    "single_account_select": true,
                    "updated": true
                  }
                }
              }
            }
          }
        }
      }
    },
    "/institutions/recommended": {
      "get": {
        "description": "List of recommended institutions",
        "parameters": [
          {
            "in": "header",
            "name": "meta",
            "required": true,
            "schema": {
              "type": "object",
              "example": {
                "job_type": "aggregate"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "example": [
                    {
                      "guid": "5e498f60-3496-4299-96ed-f8eb328ae8af",
                      "name": "TestExampleA Bank",
                      "url": "https://test-example.com",
                      "logo_url": "https://universalconnectproject.org/images/ucp-logo-icon.svg"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
